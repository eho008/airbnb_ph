<div class="container-fluid container-fluid-w1000 mb-5" style="flex-grow: 1">
    <div style="text-align:center; margin-top: 10rem; margin-bottom: 3rem">
      <h1>Available rides</h1>
    </div>
    <div id="search" class="content d-flex mt-25">
      <div class="cards">
        <% @rollercoasters.each do |rc| %>
          <%= link_to rollercoaster_path(rc) do %>
            <div class="card_category">
              <div id="carouselExampleControls<%rc.name%>" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                      <%= image_tag url_for(rc.photos.first), class: "d-block w-100 object-fit-cover", alt: "image1" %>
                  </div>
                  <div class="carousel-item">
                    <%= image_tag url_for(rc.photos[1]), class: "d-block w-100 object-fit-cover", alt: "image2" %>
                  </div>
                  <div class="carousel-item">
                    <%= image_tag url_for(rc.photos.last), class: "d-block w-100 object-fit-cover", alt: "image3" %>
                  </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
              <div class="card_description">
                <h3><%= rc.name %></h3>
                <p> <%= rc.description %></p>
                <div class="price_and_address">
                  <p> $<%= rc.price %>/day</p>
                  <p> <i class="fa-solid fa-location-dot"></i> <%= rc.location %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= render 'mapwithrollercoasters' %>
      </div>
    </div>

