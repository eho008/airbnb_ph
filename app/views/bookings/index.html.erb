<div class="container">
  <h2> My Bookings</h2>
  <% @bookings.each do |booking| %>
    <div class="card_category_show w-50">
      <h4 class="mt-3"><%= booking.rollercoaster.name %></h4>
      <p class="mt-3"><%= booking.date_begin %></p>
      <p><%= booking.date_end %></p>
      <div>
        <div class="edit_pen">
          <%= link_to edit_booking_path(booking) do %>
            <i class="fa-solid fs-3 fa-pen-to-square align-items-end" style="color: #1eb2a3;"></i>
            <% end %>
        </div>
        <div class="delete_cross">
          <%= link_to booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete it?"} do %>
            <i class="fa-solid fs-2 fa-xmark align-items-end" style="color: #1eb2a3;"></i>
            <% end %>
        </div>
        <div class="p-2 flex-fill bd-highlight">
          <%= link_to "Add a Review", new_booking_review_path(booking) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
